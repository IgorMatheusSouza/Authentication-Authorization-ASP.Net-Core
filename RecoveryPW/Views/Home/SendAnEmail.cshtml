@model RecoveryPW.Models.HomeViewModels.IgorSendEmail
@{
    ViewData["Title"] = "SendAnEmail";
}

<form  method="post">
    <h1>Enviar um Email</h1>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" style="width:340px;" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Assunto"></label>
        <input asp-for="Assunto" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Mensagem"></label>
        <textarea asp-for="Mensagem" style="height:200px;" class="form-control"></textarea>

    </div>


    <button type="submit"
            style="color:snow;background-color:black;display:block;margin:auto;width:130px"
            class="btn btn-default">Enviar</button>
</form>
